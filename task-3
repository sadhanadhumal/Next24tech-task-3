<!-----script.js------!>
let menubtn = document.querySelector('menu-btn');
let navbar = document.querySelector('.header.flex.navbar');

menubtn.onclick = ()=>{
    menubtn.classList.toggle('fa-times');
    navbar.classList.toggle('active');
}
var swiper = new swiper(".course-slider", {
    spacebetween:20,
    grabcource:true,
    loop:true,
    clickable:true,
    pagination:{
        el:".swiper-pagination",
    },
    breakpoints:{
        540:{
            slideperview:1,
        },
        768:{
            slideperview:2,
        },
        1024:{
            slideperview:3,
        }
    }
})
var swiper = new swiper(".teachers-slider", {
    spacebetween:20,
    grabcource:true,
    loop:true,
    clickable:true,
    pagination:{
        el:".swiper-pagination",
    },
    breakpoints:{
        540:{
            slideperview:1,
        },
        768:{
            slideperview:2,
        },
        1024:{
            slideperview:3,
        }
    }
})
